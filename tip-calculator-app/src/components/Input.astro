---
const { id, step, inputmode, placeholder, icon } = Astro.props;
---
<div class="relative">
  <input id={id} class="w-full rounded-lg bg-theme-grey-50 text-theme-green-900 text-2xl text-right pl-10 pr-4 py-2 outline-none focus:ring-2 focus:ring-theme-green-400 transition-all duration-300" type="number" step={step} inputmode={inputmode} placeholder={placeholder} min="0">
  {
    icon && 
    <img class="absolute left-4 top-1/2 -translate-y-1/2" src={icon} alt="Icon input">
  }
</div>
