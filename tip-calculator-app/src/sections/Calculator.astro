---
import Label from "../components/Label.astro";
import Input from "../components/Input.astro";
import ButtonTip from "../components/ButtonTip.astro";
---

<section class="flex flex-col gap-6 md:w-1/2">
  <Label id="bill" label="Bill">
    <Input id="bill" step="any" inputmode="decimal" placeholder="0" icon="/assets/icon-dollar.svg" />
  </Label>
  <Label id="tip" label="Select Tip %">
    <div class="grid grid-cols-2 gap-4 lg:grid-cols-3">
      <ButtonTip tip="5%" />
      <ButtonTip tip="10%" />
      <ButtonTip tip="15%" />
      <ButtonTip tip="25%" />
      <ButtonTip tip="50%" />
      <Input id="tip-custom" step="any" inputmode="decimal" placeholder="Custom" />
    </div>
  </Label>
  <Label id="people" label="Number of People">
    <Input id="people" placeholder="0" icon="/assets/icon-person.svg" />
    <span class="hidden absolute right-0 top-0 text-red-400">Can't be zero</span>
  </Label>
</section>